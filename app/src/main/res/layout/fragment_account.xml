<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"

    tools:context=".AccountFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgPhotoProfil"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"

                android:src="@drawable/default_photo"
                app:civ_border_color="@color/hijauWoney"
                app:civ_border_width="4dp" />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_marginTop="30dp"
                android:text="Charles Eka S"
                android:layout_toRightOf="@+id/imgPhotoProfil"
                android:textSize="25sp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/txtUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cha61197"
                android:layout_toRightOf="@+id/imgPhotoProfil"
                android:layout_below="@id/txtName"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"/>

            <ImageView
                android:layout_height="5dp"
                android:layout_width="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginTop="14dp"
                android:src="@drawable/line"
                android:layout_below="@id/imgPhotoProfil">
            </ImageView>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/txtChangeNameBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Nama Tampilan"
                android:textColor="@android:color/black"
                android:textSize="21sp"/>
            <TextView
                android:id="@+id/txtChangeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Charles EKa S"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/txtChangeEmailBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Email"
                android:textColor="@android:color/black"
                android:textSize="21sp"/>
            <TextView
                android:id="@+id/txtEmailName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Charles.eka@example.com"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/txtChangePassBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Ganti password"
                android:textColor="@android:color/black"
                android:textSize="21sp"/>

            <TextView
                android:id="@+id/txtChangePinBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Ganti PIN"
                android:textColor="@android:color/black"
                android:textSize="21sp"/>

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/my_button"
                android:text="KELUAR  AKUN"
                android:textColor="@color/white"
                android:textFontWeight="bold"
                android:textSize="16sp" />

        </LinearLayout>


    </LinearLayout>

</FrameLayout>